FROM fedora:latest
#ENV DEBIAN_FRONTEND=noninteractive

# Copia ubuntu.sources desde pkg/ (relativo al contexto containers/)
#COPY ubuntu.sources /etc/apt/sources.list.d/ubuntu.sources


RUN apt-get update

#&& apt-get install -y sudo git wget bc curl vim nano  iproute2 iputils-ping \
&& rm -rf /var/lib/apt/lists/*

RUN useradd -ms /bin/bash dk && \
    echo "dk ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers && \
    mkdir -p /home/dk/laravel /home/dk/pkg  && \
    mkdir -p /home/dk/legacy


RUN chown dk:dk /home/dk/.bashrc && chown -R dk:dk /home/dk/.config


USER dk

WORKDIR /home/dk
CMD ["bash"]

